{
  "name": "rubylabs-practice",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "docker:up": "cd 'src/app/(payload)' && docker compose up -d",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
    "generate:schema": "cross-env NODE_OPTIONS=--no-deprecation payload generate:db-schema",
    "migrate:dev": "cross-env NODE_OPTIONS=--no-deprecation payload migrate:create",
    "migrate:dep": "cross-env NODE_OPTIONS=--no-deprecation payload migrate",
    "lint": "eslint \"src/**/*.{js,jsx,ts,tsx}\" --fix",
    "prettier": "prettier --write \"src/**/*.{js,jsx,ts,tsx,css,scss}\"",
    "type-check": "tsc --noEmit",
    "format": "yarn type-check && yarn lint && yarn prettier",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "dev": "next dev",
    "build": "yarn migrate:dep && next build",
    "start": "next start"
  },
  "dependencies": {
    "@heroui/button": "^2.2.27",
    "@heroui/card": "^2.2.25",
    "@heroui/input": "^2.4.28",
    "@heroui/react": "^2.8.5",
    "@heroui/select": "^2.4.28",
    "@heroui/system": "^2.4.23",
    "@heroui/theme": "^2.4.23",
    "@t3-oss/env-nextjs": "^0.13.8",
    "@t3-oss/env-nuxt": "^0.13.8",
    "@tanstack/react-query": "^5.90.2",
    "@tanstack/react-query-devtools": "^5.90.2",
    "framer-motion": "^12.23.22",
    "ky": "^1.11.0",
    "lucide-react": "^0.545.0",
    "next": "15.5.4",
    "next-intl": "^4.3.11",
    "next-themes": "^0.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.64.0",
    "zod": "^4.1.12",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
